# Environment Variables Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file to Git!

# OpenAI API Key (if using GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Claude models)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Selection
LLM_MODEL=gpt-4-turbo-preview
# Alternative: gpt-3.5-turbo (cheaper, faster, less accurate)
# Alternative: claude-3-opus-20240229

# Optional: Temperature setting (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.0

# Optional: Max tokens for response
LLM_MAX_TOKENS=4096
